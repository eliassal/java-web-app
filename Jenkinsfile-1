pipeline {
  agent { label 'chef-u16desk' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t darinpope/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image darinpope/java-web-app:latest trivy-fs_report.txt'
      }
    }
  }
}
